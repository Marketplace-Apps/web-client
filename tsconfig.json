{
  "compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": [
			"dom",
			"es2017"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"noFallthroughCasesInSwitch": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"target": "esnext",
		"strict": false,
		"baseUrl": "./src",
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}